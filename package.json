    "express-session": "^1.18.1",
    "mongoose": "^8.14.1",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "gh-pages": "^6.3.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": "16.x"
  }
